<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Muscle Group: Legs</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/album.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    
 <% if (message) {   %> 
  <div class="row justify-content-md-center">
    <div class="alert alert-primary" role="alert">
          <%= message %>
    </div>
  </div>
<% } %>

<h1 class="text-center"> Legs </h1>
<div class="col-md-12 col-md-offset-2  justify-content-center">

</div>
  
  <div class="col-md-12 col-md-offset-2">
  
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Exercise</th>
            <th>Muscle Group</th>
            <th>Sets</th>
            <th>Reps</th>
            <th>Weight</th>
            <th>Calories Burned</th>
            <% if(user) { %>
            <th></th>
            <% } %>

        </tr>


    </tr>

    <%  
    
      workouts.forEach(workout => {
        
    %>
        <tr>
          <td><%=  workout.Exercise  %></td>
          <td><%=  workout.MuscleGroup  %></td> 
          <td><%=  workout.Sets  %></td> 
          <td><%=  workout.Reps  %></td> 
          <td><%=  workout.Weight  %></td> 
          <td><%=  workout.CaloriesBurned  %></td> 
            <% if(user) { %>
              <td class="text-center"><a class='btn btn-info btn-xs' href="/legs/update/<%= workout.id %>" ><span class="glyphicon glyphicon-edit"></span> Edit</a> 
              <a  href="/legs/delete/<%= workout.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a></td>  
            <% } %> 
        </tr>
        
     <%  
      });
     %>
 
    </thead>
          
    </table>

     
    </div>
    
  
    <%- include('common/footer') -%>
  </body>
</html>